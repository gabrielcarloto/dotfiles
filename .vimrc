" config que uso na faculdade
let mapleader = " "

set number
set relativenumber
set incsearch
set smartcase
set hlsearch
set showmatch
set expandtab
set tabstop=2
set expandtab
set scrolloff=999

imap jj <Esc>
imap <c-j> <Esc>ja
imap <c-h> <Esc>i
imap <c-k> <Esc>ka
imap <c-l> <Esc>la

nmap <leader>w :w<cr>
nmap <leader>q :q<cr>
nmap <leader>Q :q!<cr>
nmap H ^
nmap L $

map j jzz
map k kzz
map { {zz
map } }zz
map gg ggzz
map G Gzz
